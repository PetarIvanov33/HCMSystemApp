@using HCMSystemApp.Core.Models.Users
@model IEnumerable<DisplayedEmployeeModel>

@{
    ViewData["Title"] = "My Department Employees";
}

<style>
    body {
        background-image: url('https://static.wixstatic.com/media/0d7556_23c47900d20e43c391937ee6a8293f17~mv2.jpg/v1/fill/w_1440,h_886,al_c,q_85,usm_0.66_1.00_0.01/0d7556_23c47900d20e43c391937ee6a8293f17~mv2.webp');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .department-container {
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        padding: 40px;
        max-width: 1100px;
        margin: 100px auto;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
    }

    .department-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 30px;
        text-align: center;
    }

    .employee-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 15px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

        .employee-row:hover {
            transform: scale(1.01);
            background-color: #e9f7ff;
        }

    .employee-info p {
        margin: 4px 0;
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .view-profile-btn {
        background-color: #2563eb;
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.2s ease;
    }

        .view-profile-btn:hover {
            background-color: #1d4ed8;
        }

    .add-payroll-btn {
        background-color: #28a745; /* Зелен бутон */
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.2s ease;
    }

        .add-payroll-btn:hover {
            background-color: #218838; /* По-тъмен зелен */
        }

    .delete-btn {
        background-color: #dc2626;
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.2s ease;
    }

        .delete-btn:hover {
            background-color: #b91c1c;
        }

    .no-employees {
        text-align: center;
        font-size: 1.3rem;
        color: #666;
        margin-top: 50px;
    }
</style>

<div class="department-container">
    @if (User.IsInRole("Manager"))
    {
        <h2 class="department-title">My Department Employees</h2>
    }
    else if (User.IsInRole("HRAdmin"))
    {
        <h2 class="department-title">Department Employees</h2>
    }

    @if (!Model.Any())
    {
        @if (User.IsInRole("Manager"))
        {
            <div class="no-employees">
                <p>No employees found in your department.</p>
            </div>
        }
        else if (User.IsInRole("HRAdmin"))
        {
            <div class="no-employees">
                <p>No employees found in this department.</p>
            </div>
        }
    }
    else
    {
        foreach (var employee in Model)
        {
            <div class="employee-row">
                <div class="employee-info">
                    <p><strong>Name:</strong> @employee.FirstName @employee.LastName</p>
                    <p><strong>Username:</strong> @employee.UserName</p>
                    <p><strong>Email:</strong> @employee.Email</p>
                    <p><strong>Phone:</strong> @employee.PhoneNumber</p>
                    <p><strong>Position:</strong> @employee.Position</p>
                    <p><strong>Salary:</strong> @employee.SalaryAmount.ToString("C")</p>
                </div>
                <div class="action-buttons">
                    <a asp-controller="Account" asp-action="EditEmployeeProfile" asp-route-id="@employee.UserId" class="view-profile-btn">
                        Edit employee profile
                    </a>
                    <a asp-controller="Payroll" asp-action="AddPayroll" asp-route-id="@employee.UserId" class="add-payroll-btn">
                        Add Payroll to Employee
                    </a>
                    <form asp-area="" asp-controller="Account" asp-action="DeleteEmployee"
                          method="post"
                          onsubmit="return confirm('Are you sure you want to delete this Employee and all records associated with it?');"
                          style="display:inline;">

                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@employee.UserId" />
                        <input type="hidden" name="managerIdOfEmployee" value="@employee.ManagerIdOfEmployee" />
                        <button type="submit" class="delete-btn">Delete employee</button>
                    </form>

                </div>
            </div>
        }
    }
</div>
