@using HCMSystemApp.Core.Models.Users
@model IEnumerable<DisplayedEmployeeModel>

@{
    ViewData["Title"] = "Employees Without Department";
    var departments = ViewBag.Departments as SelectList;
}

<style>
    body {
        background-image: url('https://static.wixstatic.com/media/0d7556_23c47900d20e43c391937ee6a8293f17~mv2.jpg/v1/fill/w_1440,h_886,al_c,q_85,usm_0.66_1.00_0.01/0d7556_23c47900d20e43c391937ee6a8293f17~mv2.webp');
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .department-container {
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        padding: 40px;
        max-width: 1100px;
        margin: 100px auto;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
    }

    .department-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 30px;
        text-align: center;
    }

    .employee-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 15px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
        flex-wrap: wrap;
        gap: 15px;
    }

        .employee-row:hover {
            transform: scale(1.01);
            background-color: #e9f7ff;
        }

    .employee-info p {
        margin: 4px 0;
    }

    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 10px;
        align-items: flex-start;
    }

    .assign-btn, .delete-btn {
        border: none;
        padding: 10px 18px;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
        font-size: 0.95rem;
    }

    .assign-btn {
        background-color: #2563eb;
        color: white;
    }

        .assign-btn:hover {
            background-color: #1d4ed8;
        }

    .delete-btn {
        background-color: #dc2626;
        color: white;
    }

        .delete-btn:hover {
            background-color: #b91c1c;
        }

    select {
        padding: 10px;
        border-radius: 12px;
        border: 1px solid #ccc;
        font-size: 0.95rem;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        outline: none;
        transition: border-color 0.2s ease;
    }

        select:focus {
            border-color: #2563eb;
        }

    .no-employees {
        text-align: center;
        font-size: 1.3rem;
        color: #666;
        margin-top: 50px;
    }
</style>

<div class="department-container">
    <h2 class="department-title">Employees Without Department</h2>

    @if (!Model.Any())
    {
        <div class="no-employees">
            <p>All employees are assigned to a department.</p>
        </div>
    }
    else
    {
        foreach (var employee in Model)
        {
            <div class="employee-row">
                <div class="employee-info">
                    <p><strong>Name:</strong> @employee.FirstName @employee.LastName</p>
                    <p><strong>Username:</strong> @employee.UserName</p>
                    <p><strong>Email:</strong> @employee.Email</p>
                    <p><strong>Phone:</strong> @employee.PhoneNumber</p>
                    <p><strong>Position:</strong> @employee.Position</p>
                    <p><strong>Salary:</strong> @employee.SalaryAmount.ToString("C")</p>
                </div>

                <div class="action-buttons">
                    <form asp-area="Admin"
                          asp-controller="AccountAdmin"
                          asp-action="AssignDepartment"
                          method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="employeeId" value="@employee.UserId" />

                        <select name="departmentId">
                            <option value="">-- Select Department --</option>
                            @foreach (var dept in departments)
                            {
                                <option value="@dept.Value">@dept.Text</option>
                            }
                        </select>

                        <button type="submit" class="assign-btn">Assign to Department</button>
                    </form>

                    <form asp-area="Admin"
                          asp-controller="AccountAdmin"
                          asp-action="DeleteEmployee"
                          method="post"
                          onsubmit="return confirm('Are you sure you want to delete this employee?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@employee.UserId" />
                        <button type="submit" class="delete-btn">Delete Employee</button>
                    </form>
                </div>
            </div>
        }
    }
</div>
