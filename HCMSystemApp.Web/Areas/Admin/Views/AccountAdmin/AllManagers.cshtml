@using HCMSystemApp.Core.Models.Users
@model IEnumerable<DisplayedManagerModel>

@{
    ViewData["Title"] = "All Managers";
}

<style>
    body {
        background-image: url('https://static.wixstatic.com/media/0d7556_23c47900d20e43c391937ee6a8293f17~mv2.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .manager-container {
        background-color: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        padding: 40px;
        max-width: 1100px;
        margin: 100px auto;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
    }

    .manager-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 30px;
        text-align: center;
    }

    .manager-row {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease;
    }

        .manager-row:hover {
            transform: scale(1.01);
            background-color: #e6f4ff;
        }

    .manager-info p {
        margin: 4px 0;
    }

    .btn-wrapper {
        margin-top: 15px;
        display: flex;
        gap: 15px;
    }

    .edit-btn {
        background-color: #2563eb;
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: background-color 0.2s ease;
    }

        .edit-btn:hover {
            background-color: #1d4ed8;
        }

    .delete-btn {
        background-color: #dc2626;
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        transition: background-color 0.2s ease;
    }

        .delete-btn:hover {
            background-color: #b91c1c;
        }

    .add-payroll-btn {
        background-color: #28a745;
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        font-weight: 600;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.2s ease;
    }

        .add-payroll-btn:hover {
            background-color: #218838;
        }

    .no-managers {
        text-align: center;
        font-size: 1.3rem;
        color: #666;
        margin-top: 50px;
    }
</style>

<div class="manager-container">
    <h2 class="manager-title">All Managers</h2>

    @if (!Model.Any())
    {
        <div class="no-managers">
            <p>No managers found.</p>
        </div>
    }
    else
    {
        foreach (var manager in Model)
        {
            <div class="manager-row">
                <div class="manager-info">
                    <p><strong>Name:</strong> @manager.FirstName @manager.LastName</p>
                    <p><strong>Username:</strong> @manager.UserName</p>
                    <p><strong>Email:</strong> @manager.Email</p>
                    <p><strong>Phone:</strong> @manager.PhoneNumber</p>
                    <p><strong>Department:</strong> @manager.DepartmentName</p>
                    <p><strong>Salary:</strong> @manager.SalaryAmount.ToString("C")</p>
                </div>
                <div class="btn-wrapper">
                    <a asp-area="Admin" asp-controller="AccountAdmin" asp-action="EditManagerProfile" asp-route-id="@manager.UserId" class="edit-btn">
                        Edit Manager Profile
                    </a>
                    <a asp-area="Admin" asp-controller="PayrollAdmin" asp-action="AddManagerPayroll" asp-route-id="@manager.UserId" class="add-payroll-btn">
                        Add Payroll to Manager
                    </a>
                    <form asp-area="Admin"
                          asp-controller="Department"
                          asp-action="DeleteManagerAndDepartment"
                          asp-route-id="@manager.UserId"
                          method="post"
                          onsubmit="return confirm('Are you sure you want to delete this manager and their department? This action cannot be undone.');"
                          style="display:inline;">

                        @Html.AntiForgeryToken()

                        <button type="submit" class="delete-btn">Delete the Manager and his Department</button>
                    </form>
                </div>
            </div>
        }
    }
</div>
